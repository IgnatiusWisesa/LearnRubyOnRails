<h1>Edit Profile</h1>
<%= form_with model: @profile, url: profile_path do |f| %>
  <p>
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name, autofocus: true %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 5 %>
  </p>

  <%= f.submit "Save" %>
<% end %>